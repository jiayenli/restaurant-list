<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>

        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>


          </div>
        </div>
      </form>
    </div>
  </div>

</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="mb-2 d-flex flex-row-reverse">
        <form class="form-inline"  action="/" method="post" >
        <span class="sort">
          <i class="fas fa-sort-alpha-up"></i>
        </span>

          <select name="sort" onchange="submit()">
            <option value="">Sort</option>
            <option value="name">A->Z</option>
            <option value="namereverse">Z->A</option>
            <option value="category">類別</option>
            <option value="location">地區</option>
          </select>
        </form>



      </div>

      <div class="row row-cols-1 row-cols-md-3 ">
        {{#each restaurant}}    
        <div class ="col mb-4">
          <div class="card">
            <a href="./restaurants/{{this._id}}" class="text-secondary">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <div class="d-flex justify-content-between">
                <div>
                  <span class="badge badge-pill badge-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
                <div>

                  <span>
                    <a class="card-btn" href="./restaurants/{{ this._id }}/edit">
                      <button class="edit btn btn-outline-danger p-1">Edit</button>
                    </a>
                  </span>

                  <span>
                    <a class="card-btn" href="./restaurants/{{this._id}}">
                      <button class="edit btn btn-outline-danger p-1">Detail</button>
                    </a>
                  </span>

                  <span>
                    <form action="./restaurants/{{ this._id }}?_method=delete" method="POST" style="display: inline">
                      <button type="submit" class="delete btn btn-outline-danger p-1 ">Delete</button>
                    </form>
                  </span>
                </div>
              </div>

            </div>
          </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>